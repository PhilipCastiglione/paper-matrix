<%= form_with(model: paper) do |form| %>
  <% if paper.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(paper.errors.count, "error") %> prohibited this paper from being saved:</h2>
      <ul>
        <% paper.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <strong>Url:</strong>
    <%= @paper.url %>
  </p>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :read, style: "display: block" %>
    <%= form.checkbox :read %>
  </div>
  <div>
    <%= form.label :authors, style: "display: block" %>
    <%= form.text_field :authors %>
  </div>
  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.text_field :year %>
  </div>
  <p>
    <strong>Auto summary:</strong>
    <%= @paper.auto_summary %>
  </p>
  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.rich_textarea :notes %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
